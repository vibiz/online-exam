{% extends 'ExamAdminBundle::base.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Package Questions</div>
                <a href="/admin/packages/{{ package.id }}/questions/add" class="btn btn-primary pull-right"><i class="icon-plus icon-white"></i> Add Question(s)</a>
            </div>
            <div class="block-content collapse in">
                <div class="span12">
                    <fieldset>
                        <legend>{{ package.name }}</legend>
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Question</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for question in package.questions %}
                                <tr>
                                    <td class="span1">{{ question.id }}</td>
                                    <td>
                                        <div>
                                            {{ question.description }}
                                            <i class="expand icon-plus pull-right" rel="{{ question.id }}"></i>
                                        </div>
                                        <div>
                                            <form action="/admin/questions/answer/edit" method="post">
                                                <input type="hidden" name="id" value="{{ question.id }}" />
                                                <table id="{{ question.id }}" class="table table-bordered sub-table">
                                                    <thead>
                                                    <tr>
                                                        <th>Option &nbsp;&nbsp;&nbsp;<em>Choose correct option on the right column</em></th>
                                                        <th class="text-center">Set Answer</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for option in question.options %}
                                                        <tr class="{% if option == question.correctOption %}success{% else %}error{% endif %}">
                                                            <td>{{ option.description }}</td>
                                                            <td class="span2 text-center">
                                                                <input class="options" type="checkbox" value="{{ option.id }}" name="correctOption" {% if option == question.correctOption %}checked{% endif %}/>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var $forms = $("form");

        $forms.submit(function(ev) {
            var $this = $(this);
            var $request = $.ajax({
                type        : $this.attr("method"),
                action      : $this.attr("action"),
                data        : $this.serialize(),
                beforeSend  : function () {
                    $masker.start();
                }
            });

            $request.complete(function(xhr, status) {
                $masker.stop();
            });

            ev.preventDefault();
        });


        $("input.options").on("click", function() {
            var $this = $(this);
            var $form = $this.parents("form").first();

            $form.submit();
        });

        $(".expand").on("click", function() {
            var $this = $(this);
            var $table = $("table#" + $this.attr("rel"));

            $this.toggleClass("icon-plus");
            $this.toggleClass("icon-minus");

            $table.toggle();
        });
    </script>
{% endblock %}