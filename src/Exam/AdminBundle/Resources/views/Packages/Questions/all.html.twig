{% extends 'ExamAdminBundle::base.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">Package Questions</div>
                <a href="/admin/packages/{{ package.id }}/questions/add" class="btn btn-primary pull-right"><i class="icon-plus icon-white"></i> Add Question(s)</a>
            </div>
            <div class="block-content collapse in">
                <div class="span12">
                    <fieldset>
                        <legend>{{ package.name }}</legend>
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Question</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for question in package.questions %}
                                <tr>
                                    <td>{{ question.id }}</td>
                                    <td>{{ question.description }}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td colspan="3">

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}