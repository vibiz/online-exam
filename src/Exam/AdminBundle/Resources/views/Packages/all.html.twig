{% extends 'ExamAdminBundle::base.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="block">
            <div class="navbar navbar-inner block-header">
                <div class="muted pull-left">All Packages</div>
            </div>
            <div class="block-content collapse in">
                <div class="span12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Total Questions</th>
                                <th>Registered On</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for package in packages %}
                            <tr>
                                <td>{{ package.id }}</td>
                                <td>{{ package.name }}</td>
                                <td><a href="/admin/packages/{{ package.id }}/questions">{{ package.questions | length }}</a></td>
                                <td>{{ package.createdOn | date('d-M-Y') }}</td>
                                <td><a href="/admin/packages/edit/{{ package.id }}"><i class="icon-pencil"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}